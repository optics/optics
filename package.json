{
  "name": "@optiqs/optiqs",
  "description": "A state management library based on optics",
  "version": "1.1.0",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf lib/ && tsc && babel ./src --out-dir lib --extensions '.ts' --ignore '**/*.test.ts'",
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "pre-commit": "lint-staged --quiet && npm run build",
    "prepublishOnly": "npm run lint-fix && npm run prettier-write && npm run build",
    "prettier-check": "prettier --config .prettierrc --check src/**",
    "prettier-write": "prettier --config .prettierrc --write src/**",
    "check-updates": "ncu"
  },
  "peerDependencies": {
    "fp-ts": "^2.9.5",
    "monocle-ts": "^2.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/preset-typescript": "^7.12.13",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "fp-ts": "^2.9.5",
    "husky": "^5.0.9",
    "jest": "26.6.0",
    "lint-staged": "^10.5.4",
    "monocle-ts": "^2.3.5",
    "npm-check-updates": "^11.1.1",
    "prettier": "^2.2.1",
    "redux": "^4.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run prettier-write",
      "git add"
    ],
    "*src/**/*.{ts}": [
      "npm run lint"
    ]
  },
  "keywords": []
}
