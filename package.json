{
  "name": "@myopia/optics",
  "description": "A state management library based on optics",
  "version": "1.0.0",
  "main": "lib/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "build": "rimraf lib/ && tsc && babel ./src --out-dir lib --extensions '.ts' --ignore '**/*.test.ts'",
    "test": "jest",
    "lint": "eslint src/**",
    "lint-fix": "eslint src/** --fix",
    "pre-commit": "lint-staged --quiet && npm run build",
    "prepublishOnly": "npm run lint-fix && npm run prettier-write && npm run build",
    "prettier-check": "prettier --config .prettierrc --check src/**",
    "prettier-write": "prettier --config .prettierrc --write src/**",
    "check-updates": "ncu"
  },
  "peerDependencies": {
    "fp-ts": "^2.1.2",
    "monocle-ts": "^2.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-typescript": "^7.7.2",
    "@types/jest": "^24.0.23",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "fp-ts": "^2.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "monocle-ts": "^2.0.0",
    "npm-check-updates": "^3.2.1",
    "prettier": "^1.19.1",
    "redux": "^4.0.4",
    "rimraf": "^3.0.0",
    "typescript": "^3.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "npm run prettier-write",
      "git add"
    ],
    "*src/**/*.{ts}": [
      "npm run lint"
    ]
  },
  "keywords": []
}
